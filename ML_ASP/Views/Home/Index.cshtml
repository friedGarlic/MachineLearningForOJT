@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="~/css/homepage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

</head>
    <body>
        <div class="slider">
            <div class="slides">
                <!-- radio buttons-->
                <input type="radio" name="radio-btn" id="radio1" />
                <input type="radio" name="radio-btn" id="radio2" />
                <input type="radio" name="radio-btn" id="radio3" />
                <input type="radio" name="radio-btn" id="radio4" />
                <!-- radio buttons-->

                <!--slides imags-->
                <div class="slide first">
                <img src="~/assets/brand/testech.jpg" />
                    <div class="content">
                        <h1>TesTech Inc</h1>
                        <button>See Location</button>
                    </div>
                </div>
                <div class="slide">
                    <img src="~/assets/brand/toyota.jpg" />
                    <div class="content">
                        <h1>Toyota</h1>
                        <button>See Location</button>
                    </div>
                </div>
                <div class="slide">
                    <img src="~/assets/brand/PSA.jpg" />
                    <div class="content">
                        <h1>PSA Olongapo</h1>
                        <button>See Location</button>
                    </div>
                </div>
                <div class="slide">
                    <img src="~/assets/brand/3.jpg" />
                    <div class="content">
                        <h1>Brngy Municipal</h1>
                        <button>See Location</button>
                    </div>
                </div>
                <!-- slides end-->

                <!--auto navigate-->
                <div class="navigate-auto">
                    <div class="auto-btn1"></div>
                    <div class="auto-btn1"></div>
                    <div class="auto-btn1"></div>
                    <div class="auto-btn1"></div>
                </div>
                <!-- auto navigate end-->
        </div>

        <div class="navigation-manual">
            <label for="radio1" class="manual-btn"></label>
            <label for="radio2" class="manual-btn"></label>
            <label for="radio3" class="manual-btn"></label>
            <label for="radio4" class="manual-btn"></label>
        </div>
    </div>
    <section>
        <div class="statement">
            <h3>Welcome to Trailyze</h3>
            <p>
                Discover a new way to analyze your performance. Trailyze is your go-to destination
                for monitoring, reminding, storing, predicting. Whether you're a student looking to improve
                ones performance, we've got you covered.
            </p>
        </div>
    </section>
        <script src="~/js/slider.js"></script>
    </body>
</html>